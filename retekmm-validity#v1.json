{  
   "type":"object",
   "required":[  
      "evpId",
      "storeId",
      "productSku",
      "validityDate",
      "numDaysValidaty"
   ],
   "additionalProperties":false,
   "properties":{  
      "evpId":{  
         "type":"string",
         "maxLength":62
      },
      "storeId":{  
         "type":"string",
         "pattern":"^[0-9]{1,18}$"
      },
      "productSku":{  
         "type":"string",
         "pattern":"^[0-9]{1,8}$"
      },
      "productName":{  
         "type":"string",
         "maxLength":62
      },
      "productDesc":{  
         "type":"string",
         "maxLength":62
      },
      "primaryProductUpc":{  
         "type":"string",
         "maxLength":13
      },
      "nonPrimaryProductUpc":{  
         "type":"array",
         "items":{  
            "type":"string",
            "maxLength":13
         }
      },
      "validityDate":{  
         "type":"string",
         "format":"date-time"
      },
      "numDaysValidaty":{  
         "type":"integer",
         "minimum":0,
         "maximum":9999
      },
      "numDaysAction":{  
         "type":"integer"
      },
      "maxDiscountPercentage":{  
         "type":"integer"
      },
      "defaultLabel":{  
         "type":"string",
         "maxLength":62
      },
      "hierarchyCategory":{  
	"type":"array",
	"items":{  
		"type":"string",
		"maxLength":62
		}
      },
      "hierarchyReferenceLevel":{  
		"type":"string",
		"maxLength":62
      },
      "source":{  
         "type":"object",
         "additionalProperties":false,
         "properties":{  
            "id":{  
               "type":"string",
               "maxLength":13
            },
            "description":{  
               "type":"string",
               "maxLength":62
            }
         }
      },
      "location":{  
         "type":"object",
         "additionalProperties":false,
         "properties":{  
            "id":{  
               "type":"string",
               "maxLength":13
            },
            "description":{  
               "type":"string",
               "maxLength":62
            }
         }
      }
   }
}